<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find cirkit_unit03_gazebo)/config/cirkit_unit03_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
      output="screen" ns="/cirkit_unit03"
      args="joint_state_controller"/>
  <!--
      args="joint_state_controller
                                                left_front_wheel_position_controller
                                                right_front_wheel_position_controller
                                                left_rear_wheel_position_controller
                                                right_rear_wheel_position_controller"/>
  -->
  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/cirkit_unit03/joint_states" />
  </node>

</launch>
